@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Http.Features
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@using System.Globalization

@model VMHome
@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="repair-main-banner">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="repair-banner-content">
                    <h1>@Localizer["hometitle"]</h1>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="repair-banner-image">
                    <img src="~/User/assets/img/repair-banner-image/repair-banner-img.png" alt="image">
                    <img src="~/User/assets/img/repair-banner-image/1.png" class="wow zoomIn" data-wow-delay="0.6s" alt="image">
                    <img src="~/User/assets/img/repair-banner-image/2.png" class="wow fadeInLeft" data-wow-delay="0.6s" alt="image">
                    <img src="~/User/assets/img/repair-banner-image/circle.png" class="rotateme" alt="image">
                </div>
            </div>
        </div>
    </div>
</div>

<section class="repair-about-area ptb-80">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="repair-about-content">
                    <span class="sub-title">@Localizer["aboutus"]</span>
                    <h2>@Localizer["aboutustitle"]</h2>
                    <ul>
                        @foreach (var aboutItem in Model.AboutItems)
                        {
                            @if (ViewBag.lang == "az")
                            {
                                <li><span><i data-feather="check"></i>@aboutItem.Item_Az</span></li>
                            }
                            else if (ViewBag.lang == "ru")
                            {
                                <li><span><i data-feather="check"></i>@aboutItem.Item_Ru</span></li>
                            }
                            else
                            {
                                <li><span><i data-feather="check"></i>@aboutItem.Item</span></li>
                            }
                        }
                    </ul>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="repair-about-image">
                    <img src="~/User/assets/img/about1.jpg" class="wow fadeInDown" alt="image">
                    <img src="~/User/assets/img/about2.jpg" class="wow zoomIn" alt="image">
                    <img src="~/User/assets/img/about3.jpg" class="wow fadeInUp" alt="image">
                    <img src="~/User/assets/img/about-shape1.png" alt="image">
                    <img src="~/User/assets/img/about-shape2.png" alt="image">
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Repair About Area -->
<!-- Start Repair CTA Area -->

<section class="services-area-two ptb-80 bg-f9f6f6">
    <div class="container">
        <div class="section-title">
            <h2>@Localizer["ourservices"]</h2>
            <div class="bar"></div>
        </div>

        <div class="row">

            @foreach (var service in Model.ServiceItems)
            {
                @if (ViewBag.lang == "az")
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="single-services-box">
                            <h3><a href="#">@service.Title_Az</a></h3>
                            <p>@service.Content_Az</p>
                        </div>
                    </div>
                }
                else if (ViewBag.lang == "ru")
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="single-services-box">
                            <h3><a href="#">@service.Title_Ru</a></h3>
                            <p>@service.Content_Ru</p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="single-services-box">
                            <h3><a href="#">@service.Title</a></h3>
                            <p>@service.Content</p>
                        </div>
                    </div>
                }


            }

        </div>
    </div>
</section>


<section class="shop-area ptb-80">
    <div class="container">
        <div class="section-title">
            <h2>@Localizer["products"]</h2>
            <div class="bar"></div>
        </div>
        <div class="row productsRow">
            <partial name="_ProductsPartial" model="Model.Products" />
            <div class="col-lg-12 col-md-12 text-center">
                @if (ViewBag.lang == "az")
                {
                    <a asp-controller="Home" asp-action="Products" class="btn btn-light">
                        Bütün məhsullar
                    </a>
                }
                else if (ViewBag.lang == "ru")
                {
                    <a asp-controller="Home" asp-action="Products" class="btn btn-light">
                        Все продукты
                    </a>
                }
                else
                {
                    <a asp-controller="Home" asp-action="Products" class="btn btn-light">
                        All products
                    </a>
                }

            </div>
        </div>
    </div>
</section>

<section class="works-area ptb-80">
    <div class="container">
        <div class="section-title">
            <h2>@Localizer["ourprojects"]</h2>
            <div class="bar"></div>
        </div>
        <div class="row partialRow">
            <partial name="_ProjectsPartial" model="Model.Projects" />
        </div>
        <div class="col-lg-12 col-md-12 text-center">
            @if (ViewBag.lang == "az")
            {
                <a asp-controller="Home" asp-action="Projects" class="btn btn-light">
                    Bütün proyektlər
                </a>
            }
            else if (ViewBag.lang == "ru")
            {
                <a asp-controller="Home" asp-action="Projects" class="btn btn-light">
                    Все проекты
                </a>
            }
            else
            {
                <a asp-controller="Home" asp-action="Projects" class="btn btn-light">
                    All projects
                </a>
            }

        </div>
    </div>

    <div class="shape8 rotateme"><img src="~/User/assets/img/shape2.svg" alt="shape"></div>
    <div class="shape2 rotateme"><img src="~/User/assets/img/shape2.svg" alt="shape"></div>
    <div class="shape7"><img src="~/User/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape4"><img src="~/User/assets/img/shape4.svg" alt="shape"></div>
</section>

<!-- Start Fun Facts Area -->
<section class="funfacts-area ptb-80">
    <div class="container">
        <div class="section-title">
            <h2>@Localizer["homefacts"]</h2>
            <div class="bar"></div>
        </div>

        <div class="row">
            @foreach (var fact in Model.Facts)
            {
                <div class="col-lg-3 col-md-3 col-6">
                    <div class="funfact">
                        <h3><span class="odometer" data-count="@fact.Key">00</span></h3>
                        <p>
                            @if (ViewBag.lang == "az")
                            {
                                @fact.Value_Az
                            }
                            else if (ViewBag.lang == "ru")
                            {
                                @fact.Value_Ru
                            }
                            else
                            {
                                @fact.Value
                            }
                        </p>
                    </div>
                </div>
            }
        </div>

        <div class="map-bg">
            <img src="~/User/assets/img/map.png" alt="map">
        </div>
    </div>
</section>

<!-- Start Blog Area -->
<section class="blog-area ptb-80">
    <div class="container">
        <div class="section-title">
            <h2>@Localizer["homenews"]</h2>
            <div class="bar"></div>
        </div>

        <div class="row">
            @foreach (var post in Model.Posts)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-blog-post">
                        <div class="blog-image">
                            <a asp-controller="Home" asp-action="BlogDetail" asp-route-id="@post.ID" style="text-align:center">
                                <img src="~/images/@post.Image" alt="@post.ID" style="height:262.5px !important">
                            </a>

                            <div class="date">
                                <i data-feather="calendar"></i>

                                @post.CreatedDate.ToString("MMMM dd, yyyy")
                            </div>
                        </div>

                        <div class="blog-post-content">
                            <h3>
                                <a asp-controller="Home" asp-action="BlogDetail" asp-route-id="@post.ID">
                                    @if (ViewBag.lang == "az")
                                    {
                                        @post.Title_Az
                                    }
                                    else if (ViewBag.lang == "ru")
                                    {
                                        @post.Title_Ru
                                    }
                                    else
                                    {
                                        @post.Title
                                    }
                                </a>
                            </h3>

                            <span>@Localizer["by"] <a asp-controller="Home" asp-action="BlogDetail" asp-route-id="@post.ID">@post.PostWriter.Fullname</a></span>

                            <p>
                                @if (ViewBag.lang == "az")
                                {
                                    if (post.Text_Az.Length > 164)
                                    {
                                        @Html.Raw(post.Text_Az.Substring(0, 164));
                                    }
                                    else
                                    {

                                        @Html.Raw(post.Text_Az);
                                    }
                                }
                                else if (ViewBag.lang == "ru")
                                {
                                    if (post.Text_Ru.Length > 164)
                                    {
                                        @Html.Raw(post.Text_Ru.Substring(0, 164));
                                    }
                                    else
                                    {

                                        @Html.Raw(post.Text_Ru);
                                    }
                                }
                                else
                                {
                                    if (post.Text.Length > 164)
                                    {
                                        @Html.Raw(post.Text.Substring(0, 164));
                                    }
                                    else
                                    {

                                        @Html.Raw(post.Text);
                                    }
                                }
                            </p>
                            <a asp-controller="Home" asp-action="BlogDetail" asp-route-id="@post.ID" class="read-more-btn">@Localizer["readmore"] <i data-feather="arrow-right"></i> </a>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</section>
<!-- End Blog Area -->
