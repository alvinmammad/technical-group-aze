@model TechnicalGroup.Models.HomeAboutItems

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/TechnicalGroupAdmin/Views/Shared/_AdminLayout.cshtml";
}

<hr />
<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="alert alert-light alert-elevate" role="alert">
        <div class="alert-icon"><i class="flaticon-warning kt-font-brand"></i></div>
        <div class="alert-text">
            Ana səhifənin haqqında bölməsinin bəndlərinə misal olaraq aşağıda göstərilmiş şəkilə baxa bilərsiniz :
        </div>
    </div>
    <div class="alert alert-light alert-elevate" role="alert">

        <img src="~/images/Screenshots/home-about-items-ss.png" alt="Facts" class="w-100" style="object-fit:scale-down" />
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="kt-portlet">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <span class="kt-portlet__head-icon">
                            <i class="kt-font-brand flaticon2-information"></i>
                        </span>
                        <h3 class="kt-portlet__head-title">
                            Ana səhifənin haqqında bölməsinin bəndləri
                        </h3>
                    </div>
                </div>
                <form asp-action="Edit" class="kt-form kt-form--label-right" id="kt_form_1" novalidate="novalidate">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ID" />
                    <div class="kt-portlet__body">
                        <div class="form-group row ">
                            <label class="col-3 col-form-label">Bənd (AZE):</label>
                            <div class="col-9">
                                <input asp-for="Item_Az" class="form-control" placeholder="Bənd (Azərbaycan dilində)">
                                <span asp-validation-for="Item_Az" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3 col-form-label">Bənd (RUS):</label>
                            <div class="col-9">
                                <input asp-for="Item_Ru" class="form-control" placeholder="Bənd (rus dilində)">
                                <span asp-validation-for="Item_Ru" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3 col-form-label">Bənd (ENG):</label>
                            <div class="col-9">
                                <input asp-for="Item" class="form-control" placeholder="Bənd (ingilis dilində)">
                                <span asp-validation-for="Item" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="kt-separator kt-separator--border-dashed kt-separator--space-lg kt-separator--portlet-fit"></div>
                    </div>
                    <div class="kt-portlet__foot">
                        <div class="kt-form__actions">
                            <div class="row">
                                <div class="col-lg-5"></div>
                                <div class="col-lg-7">
                                    <button type="submit" class="btn btn-brand">Redaktə et</button>
                                    <button type="reset" class="btn btn-secondary">Ləğv elə</button>
                                </div>
                            </div>
                            <div class="row">
                                <a asp-action="Index" class="btn btn-danger">Geriyə qayıt</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
