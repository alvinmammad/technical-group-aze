@model TechnicalGroup.Models.Post

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/TechnicalGroupAdmin/Views/Shared/_AdminLayout.cshtml";
}
<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="kt-portlet">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <span class="kt-portlet__head-icon">
                            <i class="kt-font-brand flaticon2-information"></i>
                        </span>
                        <h3 class="kt-portlet__head-title">
                            Xəbərlər
                        </h3>
                    </div>
                </div>
                <form asp-action="Edit" class="kt-form @*kt-form--label-right*@" id="kt_form_1" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ID" />
                    <div class="kt-portlet__body">
                        <div class="form-group row ">
                            <label class="col-3 col-form-label">Xəbərin şəkli:</label>
                            <div class="col-9">
                                <div class="custom-file">
                                    <input asp-for="Photo" accept="image/*" class="custom-file-input" id="customFile">
                                    <label class="custom-file-label" for="customFile">Choose file</label>
                                    <span asp-validation-for="Photo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3 col-form-label">Hal-hazırki şəkil:</label>
                            <img src="~/images/@Model.Image" class="img-thumbnail img-shadow" style="display: block;" width="200" />
                        </div>
                        <div class="form-group row">
                            <label class="col-3 col-form-label">Başlıq (Azərbaycan dilində):</label>
                            <div class="col-9">
                                <input asp-for="Title_Az" class="form-control" placeholder="Başlıq (Azərbaycan dilində)">
                                <span asp-validation-for="Title_Az" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3 col-form-label">Başlıq (rus dilində):</label>
                            <div class="col-9">
                                <input asp-for="Title_Ru" class="form-control" placeholder="Başlıq (rus dilində)">
                                <span asp-validation-for="Title_Ru" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3 col-form-label">Başlıq (ingilis dilində):</label>
                            <div class="col-9">
                                <input asp-for="Title" class="form-control" placeholder="Başlıq (ingilis dilində)">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3 col-form-label">Xəbər mətni (Azərbaycan dilində):</label>
                            <div class="col-9">
                                <textarea asp-for="Text_Az" class="form-control" rows="10"></textarea>
                                <span asp-validation-for="Text_Az" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3 col-form-label">Xəbər mətni (rus dilində):</label>
                            <div class="col-9">
                                <textarea asp-for="Text_Ru" class="form-control" rows="10"></textarea>
                                <span asp-validation-for="Text_Ru" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3 col-form-label">Xəbər mətni (ingilis dilində):</label>
                            <div class="col-9">
                                <textarea asp-for="Text" class="form-control" rows="10"></textarea>
                                <span asp-validation-for="Text" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3 col-form-label">Xəbər yazarı:</label>
                            <div class="col-9">
                                <select asp-for="PostWriterID" class="form-control" asp-items="ViewBag.PostWriterID"></select>
                                <span asp-validation-for="PostWriterID" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="form-group row">
                            <label class="col-3 col-form-label">Instagram linki:</label>
                            <div class="col-9">
                                <input asp-for="InstagramURL" class="form-control" placeholder="Instagram linki">
                                <span asp-validation-for="InstagramURL" class="text-danger"></span>
                            </div>
                        </div>
                        <input type="hidden" asp-for="CreatedDate" value="@DateTime.Now" />
                    </div>
                    <div class="kt-portlet__foot">
                        <div class="kt-form__actions">
                            <div class="row">
                                <div class="col-lg-5"></div>
                                <div class="col-lg-7">
                                    <button type="submit" class="btn btn-brand">Redaktə et</button>
                                    <button type="reset" class="btn btn-secondary">Ləğv elə</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>





<div class="text-center" style="border-bottom:15px solid transparent">
    <a asp-action="Index" class="btn btn-outline-brand">
        <i class="fa fa-undo"></i>
        Geriyə qayıt
    </a>
</div>

@section scripts{
    <script src="https://cdn.ckeditor.com/ckeditor5/12.3.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#Text_Az'));
        ClassicEditor
            .create(document.querySelector('#Text_Ru'))
        ClassicEditor
            .create(document.querySelector('#Text'))
    </script>
}

