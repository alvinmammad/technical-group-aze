@model TechnicalGroup.Models.ProductCategory

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/TechnicalGroupAdmin/Views/Shared/_AdminLayout.cshtml";
}

<hr />
<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="kt-portlet">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <span class="kt-portlet__head-icon">
                            <i class="fa fa-list-ol"></i>
                        </span>
                        <h3 class="kt-portlet__head-title">
                            Məhsulların kateqoriyaları
                        </h3>
                    </div>
                </div>
                <form asp-action="Create" class="kt-form kt-form--label-right" id="kt_form_1">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="kt-portlet__body">
                        <div class="form-group row ">
                            <label class="col-3 col-form-label">Kateqoriya adı(AZE):</label>
                            <div class="col-9">
                                <input asp-for="CategoryName_Az" class="form-control" placeholder="Kateqoriya adı (Azərbaycan dilində)">
                                <span asp-validation-for="CategoryName_Az" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3 col-form-label">Kateqoriya adı(RUS):</label>
                            <div class="col-9">
                                <input asp-for="CategoryName_Ru" class="form-control" placeholder="Kateqoriya adı (rus dilində)">
                                <span asp-validation-for="CategoryName_Ru" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3 col-form-label">Kateqoriya adı(ENG):</label>
                            <div class="col-9">
                                <input asp-for="CategoryName" class="form-control" placeholder="Kateqoriya adı (ingilis dilində)">
                                <span asp-validation-for="CategoryName" class="text-danger"></span>
                            </div>
                        </div>
                       
                    </div>
                    <div class="kt-portlet__foot">
                        <div class="kt-form__actions">
                            <div class="row">
                                <div class="col-lg-5"></div>
                                <div class="col-lg-7">
                                    <button type="submit" class="btn btn-brand">Yarat</button>
                                    <button type="reset" class="btn btn-secondary">Ləğv elə</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>