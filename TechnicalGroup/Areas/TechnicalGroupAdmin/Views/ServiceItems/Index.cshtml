@model IEnumerable<TechnicalGroup.Models.ServiceItems>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/TechnicalGroupAdmin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .sorting {
        font-weight: 600 !important;
    }
</style>
<div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor" id="kt_content">
    <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
        <div class="alert alert-light alert-elevate" role="alert">
            <div class="alert-icon"><i class="flaticon-warning kt-font-brand"></i></div>
            <div class="alert-text">
                Servislər bölməsinin bəndlərinə misal olaraq aşağıda göstərilmiş şəkilə baxa bilərsiniz :
            </div>
        </div>
        <div class="alert alert-light alert-elevate" role="alert">

            <img src="~/images/Screenshots/service-items-ss.png" alt="Alternate Text" class="w-100" />
        </div>
        <hr />
        <div class="kt-portlet kt-portlet--mobile">

            <div class="kt-portlet__head kt-portlet__head--lg">
                <div class="kt-portlet__head-label">
                    <span class="kt-portlet__head-icon">
                        <i class="flaticon2-gear"></i>
                    </span>
                    <h3 class="kt-portlet__head-title">
                        Servislər bölməsinin bəndləri
                    </h3>
                </div>
                <div class="kt-portlet__head-toolbar">
                    <div class="kt-portlet__head-wrapper">
                        <div class="kt-portlet__head-actions">
                            &nbsp;
                            <a asp-action="Create" asp-controller="ServiceItems" class="btn btn-brand btn-elevate btn-icon-sm">
                                <i class="la la-plus"></i>
                                Yarat
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="kt-portlet__body">
                <!--begin: Datatable -->
                <div id="kt_table_1_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-striped- table-bordered table-hover table-checkable dataTable no-footer dtr-inline collapsed" id="kt_table_1" role="grid" aria-describedby="kt_table_1_info" style="width: 982px;">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting" tabindex="0" aria-controls="kt_table_1" rowspan="1" colspan="1" style="width: 38.25px;" aria-sort="descending" aria-label="Order ID: activate to sort column ascending">ID</th>
                                        <th class="sorting" tabindex="0" aria-controls="kt_table_1" rowspan="1" colspan="1" style="width: 58.25px;" aria-label="Country: activate to sort column ascending">Başlıq(AZE)</th>
                                        <th class="sorting" tabindex="0" aria-controls="kt_table_1" rowspan="1" colspan="1" style="width: 72.25px;" aria-label="Ship City: activate to sort column ascending">Başlıq(RUS)</th>
                                        <th class="sorting" tabindex="0" aria-controls="kt_table_1" rowspan="1" colspan="1" style="width: 90.25px;" aria-label="Ship Address: activate to sort column ascending">Başlıq(ENG)</th>
                                        <th class="sorting" tabindex="0" aria-controls="kt_table_1" rowspan="1" colspan="1" style="width: 75.25px;" aria-label="Company Agent: activate to sort column ascending">Məzmun(AZE)</th>
                                        <th class="sorting" tabindex="0" aria-controls="kt_table_1" rowspan="1" colspan="1" style="width: 110.25px;" aria-label="Company Name: activate to sort column ascending">Məzmun(RUS)</th>
                                        <th class="sorting" tabindex="0" aria-controls="kt_table_1" rowspan="1" colspan="1" style="width: 39.25px;" aria-label="Ship Date: activate to sort column ascending">Məzmun(ENG)</th>
                                        <th class="sorting" tabindex="0" aria-controls="kt_table_1" rowspan="1" colspan="1" style="width: 39.25px;" aria-label="Ship Date: activate to sort column ascending">Dəyiş/Sil</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var serviceItem in Model)
                                    {
                                        <tr role="row" class="odd admintr">
                                            <td>@serviceItem.ID</td>
                                            <td>@serviceItem.Title_Az</td>
                                            <td>@serviceItem.Title_Ru</td>
                                            <td>@serviceItem.Title</td>
                                            <td>@serviceItem.Content_Az</td>
                                            <td>@serviceItem.Content_Ru</td>
                                            <td>@serviceItem.Content</td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@serviceItem.ID" class="alert alert-info" alt="Dəyişdir">
                                                    <i class="fa fa-pen"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@serviceItem.ID" class="alert alert-danger">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            </td>

                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>

                </div>
                <!--end: Datatable -->
            </div>
        </div>
    </div>
    <!-- end:: Content -->
</div>